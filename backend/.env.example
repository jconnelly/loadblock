# LoadBlock Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://loadblock_user:loadblock_pass@localhost:5432/loadblock_dev

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Session Configuration
SESSION_TIMEOUT=3600000
REFRESH_TOKEN_TIMEOUT=604800000

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10

# Logging Configuration
LOG_LEVEL=info

# External Services (will be implemented in later phases)
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http

# Hyperledger Fabric Configuration (Phase 2)
FABRIC_NETWORK_NAME=loadblock-network
FABRIC_CHANNEL_NAME=loadblock-channel
FABRIC_CHAINCODE_NAME=loadblock-cc
FABRIC_CONNECTION_PROFILE_PATH=./config/fabric-connection.json
FABRIC_WALLET_PATH=./wallet

# AWS Configuration (Phase 4)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Email Configuration (Future implementation)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@loadblock.io

# Monitoring and Analytics (Future implementation)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=